<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/dark_gray">

        <!-- Name Field -->
        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Scope Name"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_margin="5dp"
            tools:ignore="Autofill,VisualLintTextFieldSize"
            android:background="@drawable/edit_text_border"
            android:textColor="@color/input_field_background"
            android:textColorHint="@color/input_field_background"/>

        <!-- Brand Field -->
        <EditText
            android:id="@+id/et_brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Brand"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_margin="5dp"
            tools:ignore="Autofill,VisualLintTextFieldSize"
            android:background="@drawable/edit_text_border"
            android:textColor="@color/input_field_background"
            android:textColorHint="@color/input_field_background"/>

        <!-- Max Magnification Field -->
        <EditText
            android:id="@+id/et_max_magnification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Max Magnification"
            android:inputType="numberDecimal"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_margin="5dp"
            tools:ignore="Autofill,VisualLintTextFieldSize"
            android:background="@drawable/edit_text_border"
            android:textColor="@color/input_field_background"
            android:textColorHint="@color/input_field_background"/>

        <!-- Variable Magnification Field -->
        <EditText
            android:id="@+id/et_variable_magnification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Variable Magnification"
            android:inputType="text"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_margin="5dp"
            tools:ignore="Autofill,VisualLintTextFieldSize"
            android:background="@drawable/edit_text_border"
            android:textColor="@color/input_field_background"
            android:textColorHint="@color/input_field_background"/>

        <!-- Zero Distance Field -->
        <EditText
            android:id="@+id/et_zero_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Zero Distance"
            android:inputType="numberDecimal"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_margin="5dp"
            tools:ignore="Autofill,VisualLintTextFieldSize"
            android:background="@drawable/edit_text_border"
            android:textColor="@color/input_field_background"
            android:textColorHint="@color/input_field_background"/>

        <!-- Zero Windage Field -->
        <EditText
            android:id="@+id/et_zero_windage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Zero Windage"
            android:inputType="numberDecimal"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_margin="5dp"
            tools:ignore="Autofill,VisualLintTextFieldSize"
            android:background="@drawable/edit_text_border"
            android:textColor="@color/input_field_background"
            android:textColorHint="@color/input_field_background"/>

        <!-- Zero Elevation Field -->
        <EditText
            android:id="@+id/et_zero_elevation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Zero Elevation"
            android:inputType="numberDecimal"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_margin="5dp"
            tools:ignore="Autofill,VisualLintTextFieldSize"
            android:background="@drawable/edit_text_border"
            android:textColor="@color/input_field_background"
            android:textColorHint="@color/input_field_background"/>

        <!-- Zero Date Field -->
        <EditText
            android:id="@+id/et_zero_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Zero Date"
            android:inputType="date"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_margin="5dp"
            tools:ignore="Autofill,VisualLintTextFieldSize"
            android:background="@drawable/edit_text_border"
            android:textColor="@color/input_field_background"
            android:textColorHint="@color/input_field_background"/>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:backgroundTint="@color/olive_drab"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/orange_hue"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
